{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": [],
		"rootDirs": ["."],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"typeRoots": ["node_modules/@types"],
		"noResolve": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "../server/src/db/**/*"]
}
